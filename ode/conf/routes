# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.home()

# Authentication
POST    /register                   controllers.Auth.register()
GET     /login                      controllers.Application.login()
POST    /login                      controllers.Auth.authenticate()
GET     /logout                     controllers.Application.logout()

# Browsing
GET     /rules                      controllers.Application.rules()
GET     /rules/:id                  controllers.Application.rule(id: Int)

# Search
GET     /search                     controllers.Application.search()

# Features
GET     /features                       controllers.Features.list()
POST    /features                       controllers.Features.createFeature()
PUT     /features/:name/name            controllers.Features.updateFeatureName(name: String)
PUT     /features/:name/description     controllers.Features.updateFeatureDescription(name: String)
PUT     /features/:name/type            controllers.Features.updateFeatureType(name: String)
POST    /features/:name/targets         controllers.Features.addTargets(name: String)
POST    /features/:fname/targets/delete controllers.Features.deleteTarget(fname: String)
DELETE  /features/:fname                controllers.Features.deleteFeature(fname: String)

# Client-side routers
GET     /assets/js/featureRoutes    controllers.Features.javascriptRoutes()
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
